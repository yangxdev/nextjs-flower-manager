generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") 
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Order {
    id        String   @id @default(cuid())
    deliveryDate DateTime @map(name: "delivery_date")
    customerName String @map(name: "customer_name")
    customerWechatId String @map(name: "customer_wechat_id")
    advance Float
    amount Float
    productionCost Float    @map(name: "production_cost")
    photo String
    soldStatus String @map(name: "sold_status")
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")
    // userId    String   @map(name: "user_id")
    // user      User     @relation(fields: [userId], references: [id])

    @@map(name: "orders")
}


